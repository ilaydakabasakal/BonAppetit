@model List<YemekSitesi.Models.Tables.tbl_kategori>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h3 class="mt-4">Kategoriler</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<ul class="nav nav-pills justify-content-end mb-3">
    <li class="nav-item mx-1">
        @Html.ActionLink("Ekle", "KategoriEkle", "Home", null, new { @class = "btn btn-success", aria_current = "page" })
    </li>
</ul>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
    </div>

    <div class="card-body">

        <table class="table" id=" datatablesSimple">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">İşlem</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var kategoriler in Model)
                {
                    <tr>

                        <th scope="row">@kategoriler.kategoriID</th>
                        <td>@kategoriler.kategoriAd</td>
                        <th scope="row">
                            @Html.ActionLink("Güncelle", "KategoriGuncelle2", "Home", new { kategoriID = kategoriler.kategoriID }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Sil", "KategoriSil2", "Home", new { kategoriID = kategoriler.kategoriID }, new { @class = "btn btn-danger btn-sm" })
                        </th>
                    </tr>
                }
            </tbody>
        </table>







    </div>
</div>

