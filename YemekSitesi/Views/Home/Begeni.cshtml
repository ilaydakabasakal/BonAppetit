@model List<YemekSitesi.Models.Tables.tbl_begeni>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h3 class="mt-4">Beğeniler</h3>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
    </div>

    <div class="card-body">

        <table class="table" id=" datatablesSimple">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Üye Kullanıcı Adı</th>
                    <th scope="col">Tarif Başlığı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var begeniler in Model)
                {
                    <tr>

                        <th scope="row">@begeniler.begeniID</th>
                        @*<td>@begeniler.uyeID</td>*@
                    <td>
                        @if (begeniler.begenenUye != null)
                        {
                            <span> @begeniler.begenenUye.uyeKullaniciAd</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>

                        <td>
                            @if (begeniler.tarifler != null)
                            {
                                <span> @begeniler.tarifler.baslik</span>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td> @*hangi tarifi beğenmiş, beğeniler hangi tariften geliyor*@
                    </tr>
                }
            </tbody>
        </table>







    </div>
</div>

