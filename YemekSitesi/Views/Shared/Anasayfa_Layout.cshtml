            background-image: linear-gradient( to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0) );
        }
        .travel-slider-planet {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            height: 130%;
        }
        .travel-slider .swiper-slide {
            width: 80%;
            max-width: 640px;
            box-sizing: border-box;
            position: relative;
            height:300px;
        }
        .travel-slider-bg-image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            left: 0;
            top: 0;
            border-radius: 16px;
            box-sizing: border-box;
            box-shadow: 0 10px 20px #00000080, 0 -1px #ffffff80;

        }
        .travel-slider-title {
            font-weight: bold;
            font-size: 32px;
            top: 50px;
        }

        .travel-slider-subtitle {
            font-size: 18px;
            top: 50px;
