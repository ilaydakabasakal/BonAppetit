@model YemekSitesi.Models.Tables.tbl_uye
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> <!--boostrap-->

    <style>
        body {
            background-color: #f4f4f4;
            background-image: url("/template/assets/nttt.jpg");
            background-size: cover;
        }

        .signup-container {
            max-width: 500px;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin: auto;
            margin-top: 10vh;
        }

        .signup-form h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .container_width {
            width: 400px;
        }
    </style>
</head>
<body>
    <div class="signup-container container_width">
        @using (Html.BeginForm("KayitOl", "Ana", FormMethod.Post))
        {
<h2 class="mb-4">Kayit Ol</h2>
                <div class="mb-3">
                    <label for="uyeKullaniciAd" class="form-label fw-semibold">Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.uyeKullaniciAd, new { @class = "form-control" })
                </div>
                                <div class="mb-3">
                                    <label for="uyeAd" class="form-label fw-semibold">Adınız</label>
                                    @Html.TextBoxFor(x => x.uyeAd, new { @class = "form-control" })
                                </div>
                                                <div class="mb-3">
                                                    <label for="uyeSoyad" class="form-label fw-semibold">Soyadınız</label>
                                                    @Html.TextBoxFor(x => x.uyeSoyad, new { @class = "form-control" })
                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="uyeEposta" class="form-label fw-semibold">E-posta</label>
                                                                    @Html.TextBoxFor(x => x.uyeEposta, new { @class = "form-control" })
                                                                </div>
                                                                                <div class="mb-3">
                                                                                    <label for="uyeParola" class="form-label fw-semibold">Şifre</label>
                                                                                    @Html.PasswordFor(x => x.uyeParola, new { @class = "form-control" })
                                                                                </div>
                                                                                                <button type="submit" class="btn btn-primary text-center">Kayıt Ol</button>}
        <div class="register-link mt-3 text-center">
            <p>Zaten hesabım var <a href="~/Ana/Giris">Giriş Yap</a></p>
        </div>
    </div>
</body>
</html>